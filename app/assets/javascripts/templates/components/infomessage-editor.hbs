<div class="modal fade show">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true" {{action 'close'}}>&times;</button>
        <h4 class="modal-title" id="myModalLabel">
        {{#if item.id}}
        Edit Message
        {{else}}
        New Message
        {{/if}}
        </h4>
      </div>
      <div class="modal-body">
        <form role="form">
          <div class="row">
            <label for="name">Message Text</label>
            {{textarea classNames="form-control" name="text" valueBinding="item.text"}}
          </div>
          <div class="row">
            <label for="displayTime">Display Time</label>
            {{input type="number" name="displayTime" valueBinding="item.displayTime"}}
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal" {{action 'close'}} >Close</button>
        <button type="button" class="btn btn-primary" {{action 'save'}}>{{#if item.id}}Save {{else}} Create {{/if}} Record</button>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div>