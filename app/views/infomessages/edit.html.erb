<% if @message.new_record? %>
  <h2>Create Message</h2>
<% else %>
  <h2>Edit Message</h2>
<% end %>
<%= form_for(@message) do |f| %>
  <div class="form-group">
    <%= f.label :text, "Message Text" %>
    <%= f.text_area :text, class: "input-xlarge" %>
  </div>
  <div class="form-group">
    <%= f.label :image, "Image" %>
    <%= f.file_field :image %><br/>
  </div>
  <%= f.submit 'Save', class: "btn" %>
<% end %>